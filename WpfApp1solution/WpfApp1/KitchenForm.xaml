<Window x:Class="WpfApp1.KitchenForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        xmlns:viewmodels="clr-namespace:WpfApp1.ViewModels"
        xmlns:views="clr-namespace:WpfApp1.Views"
        mc:Ignorable="d"
        Title="KitchenForm" Height="900" Width="1600" Background="#FF6AB1CF">

    <Window.Resources>

        <DataTemplate x:Name="CallWaiterTemplate" DataType="{x:Type viewmodels:CallWaiterViewModel}">
            <views:CallWaiterView DataContext="{Binding}"/>
        </DataTemplate>
        <DataTemplate x:Name="FirstOrderTemplate" DataType="{x:Type viewmodels:FirstOrderViewModel}">
            <views:FirstOrderView DataContext="{Binding}"/>
        </DataTemplate>

    </Window.Resources>

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>


        <ContentControl Name="contentControl"  Grid.Row="0" Grid.Column="4" Margin="0,0,0,0"/>

        <ContentControl Name="OrderControl" Grid.Row="1" Grid.Column="0" Grid.RowSpan="3" Grid.ColumnSpan="1"/>

        <Button Grid.Column="4" Margin="118,57,109,55" Grid.Row="1" Height="Auto" Name="close" Click="close_Click"/>

    </Grid>

</Window>
